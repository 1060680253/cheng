<?xml version="1.0" encoding="utf-8"?>
<net.oschina.app.widget.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_active"
            style="@style/option_item_rl"
            android:layout_marginTop="@dimen/space_20" >

            <TextView
                style="@style/option_item_text"
                android:text="@string/active" />

            <TextView
                android:id="@+id/tv_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_10" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_find_osc"
            style="@style/option_item_rl"
            android:layout_marginTop="@dimen/space_20" >

            <TextView
                style="@style/option_item_text"
                android:text="@string/find_oscer" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color" />

        <RelativeLayout 
            android:id="@+id/rl_city"
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text"
                android:text="@string/friends" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color" />

        <RelativeLayout 
            android:id="@+id/rl_activities"
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text"
                android:text="@string/activities" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            android:id="@+id/rl_scan"
            style="@style/option_item_rl"
            android:layout_marginTop="@dimen/space_20" >

            <TextView
                style="@style/option_item_text"
                android:text="@string/scan" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            android:id="@+id/rl_shake"
            style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text"
                android:text="@string/shake" />
        </RelativeLayout>
    </LinearLayout>

</net.oschina.app.widget.CustomerScrollView>