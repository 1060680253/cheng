<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:orientation="vertical"
    android:padding="@dimen/space_10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_gravity="center" >

            <net.oschina.app.widget.AvatarView
                android:id="@+id/iv_tweet_face"
                style="@style/user_face_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tweet_item_profile_info_padd"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_tweet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightblue"
                    android:text="火蚁"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_tweet_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8分钟前"
                    android:textColor="@color/tweet_time_platform"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>
        </LinearLayout>

        <net.oschina.app.widget.LinkView
            android:id="@+id/tweet_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web|email"
            android:text="设计模式优缺点及应用场景整理"
            android:layout_marginBottom="@dimen/space_8"
            android:textColorLink="@color/blue"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:id="@+id/iv_tweet_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitStart"
           	android:layout_marginBottom="@dimen/space_8"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_tweet_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自：Android"
                android:textColor="@color/tweet_time_platform"
                android:layout_marginRight="@dimen/space_10"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/tv_tweet_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2"
                android:textColor="@color/lightblue"
                android:layout_weight="1"
                android:gravity="right"
                android:text="评论(20)"
                android:textSize="@dimen/text_size_12" />
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>