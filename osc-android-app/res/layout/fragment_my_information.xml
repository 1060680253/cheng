<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/net.oschina.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <net.oschina.app.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_user_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_background"
                android:clickable="true"
                android:padding="@dimen/space_8" >

                <net.oschina.app.widget.AvatarView
                    android:id="@+id/iv_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="@dimen/space_10"
                    android:contentDescription="@null"
                    android:src="@drawable/widget_dface"
                    app:border_color="@color/lightblue"
                    app:border_width="3dip" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_avatar"
                    android:layout_alignRight="@id/iv_avatar"
                    android:layout_margin="2dip"
                    android:background="@drawable/userinfo_icon_male" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:text="火蚁"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/go_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_10"
                    android:src="@drawable/ic_item_goto_right_tip" />

                <TextView
                    android:id="@+id/tv_sigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:layout_alignRight="@id/go_right"
                    android:contentDescription="@null"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="这个人很懒，啥也没写这个人很懒，啥也没写这个人很懒，啥也没写这个人很懒，啥也没写这个人很懒，啥也没写" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ly_favorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_background"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/space_4" >

                    <TextView
                        android:id="@+id/tv_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_2"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:background="@color/list_divider_color" />

                <LinearLayout
                    android:id="@+id/ly_following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_background"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/space_4" >

                    <TextView
                        android:id="@+id/tv_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_2"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/following"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:background="@color/list_divider_color" />

                <LinearLayout
                    android:id="@+id/ly_follower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_background"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/space_4" >

                    <TextView
                        android:id="@+id/tv_follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_2"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/follower"
                        android:textColor="@color/main_gray"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/list_divider_color" />

            <include layout="@layout/fragment_user_center_information" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/list_divider_color" />

            <RelativeLayout
                android:id="@+id/rl_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_background"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/space_11" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_4"
                    android:drawableLeft="@drawable/ic_action_comment"
                    android:drawablePadding="@dimen/space_5"
                    android:gravity="center_vertical"
                    android:text="@string/blog"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_10"
                    android:src="@drawable/ic_item_goto_right_tip" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />

            <RelativeLayout
                android:id="@+id/rl_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_background"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/space_11" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_4"
                    android:drawableLeft="@drawable/ic_action_comment"
                    android:drawablePadding="@dimen/space_5"
                    android:gravity="center_vertical"
                    android:text="@string/qrcode"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_10"
                    android:src="@drawable/ic_item_goto_right_tip" />
            </RelativeLayout>
        </LinearLayout>
    </net.oschina.app.widget.CustomerScrollView>

    <net.oschina.app.ui.empty.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>