<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <net.oschina.app.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include 
                android:id="@+id/user_information"
                layout="@layout/fragment_my_information_head"/>

            <RelativeLayout
                android:id="@+id/rl_message"
                style="@style/option_item_rl"
                android:layout_marginTop="20dp" >

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/message" />

                <TextView
                    android:id="@+id/tv_mes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_10" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />

            <RelativeLayout
                android:id="@+id/rl_team"
                style="@style/option_item_rl" >

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/team" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />

            <RelativeLayout
                android:id="@+id/rl_blog"
                style="@style/option_item_rl" >

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/blog" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />

            <RelativeLayout 
                android:id="@+id/rl_note"
                style="@style/option_item_rl" >

                <TextView
                    style="@style/option_item_text"
                    android:text="@string/note" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />
        </LinearLayout>
    </net.oschina.app.widget.CustomerScrollView>

    <net.oschina.app.ui.empty.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>