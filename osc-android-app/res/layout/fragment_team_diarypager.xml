<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"  >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/team_diary_pager_left"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_brows_back" />

            <TextView
                android:id="@+id/team_diary_pager_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/main_gray"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="标题" />

            <ImageView
                android:id="@+id/team_diary_pager_right"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_brows_forward" />
        </LinearLayout>

        <ImageView
            android:id="@+id/team_diary_pager_calendar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_brows_forward" />
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/team_diary_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>