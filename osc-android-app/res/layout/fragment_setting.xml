<?xml version="1.0" encoding="utf-8"?>
<net.oschina.app.widget.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RelativeLayout
            style="@style/option_item_rl"
            android:layout_marginTop="20dip" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/loading_img"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />

            <net.oschina.app.widget.togglebutton.ToggleButton
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />

        <RelativeLayout style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/mes_notice"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />

        <RelativeLayout style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/clear_cache"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_14"
                android:text="10M"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />

        <RelativeLayout style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/update"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/text_size_14"
                android:text="已经是最新版"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            style="@style/option_item_rl"
            android:layout_marginTop="20dip" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/feedback"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />

        <RelativeLayout style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/grade"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            style="@style/option_item_rl"
            android:layout_marginTop="20dip" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/about"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:background="@color/list_divider_color" />

        <RelativeLayout style="@style/option_item_rl" >

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/exit"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
    </LinearLayout>

</net.oschina.app.widget.CustomerScrollView>