<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_wrap"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_issue_title"
        style="@style/list_text_title"
        android:padding="@dimen/space_8"
        android:text="#17  任务标题"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_8" >

        <TextView
            android:id="@+id/tv_issue_author"
            style="@style/list_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="火蚁"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_to"
            style="@style/list_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="指派给" />

        <TextView
            android:id="@+id/tv_issue_touser"
            style="@style/list_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="火蚁"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_issue_time"
            style="@style/list_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_team_issue_labels"
        style="@style/fill_wrap"
        android:orientation="horizontal"
        android:padding="@dimen/space_8" >
    </LinearLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

</LinearLayout>