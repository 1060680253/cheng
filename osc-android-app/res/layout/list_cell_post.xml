<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="9dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="10dip" >

    <net.oschina.app.widget.AvatarView
        android:id="@+id/iv_post_face"
        android:layout_marginRight="@dimen/space_10"
        style="@style/user_face_image" />

    <TextView
        android:id="@+id/tv_post_title"
        style="@style/list_text_title"
        android:layout_toRightOf="@id/iv_post_face"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/space_5"
        android:maxLines="2" />
    
    <TextView 
        android:id="@+id/tv_post_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_post_title"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_toRightOf="@id/iv_post_face"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/main_gray" />

    <TextView
        android:id="@+id/tv_post_author"
        style="@style/list_text_info"
        android:layout_below="@id/tv_post_description"
        android:layout_toRightOf="@id/iv_post_face" />

    <TextView
        android:id="@+id/tv_post_date"
        style="@style/list_text_info"
        android:layout_toRightOf="@id/tv_post_author"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_below="@id/tv_post_description" />

    <TextView
        android:id="@+id/tv_post_count"
        style="@style/list_text_info"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_toRightOf="@id/tv_post_date"
        android:layout_below="@id/tv_post_description" />

</RelativeLayout>