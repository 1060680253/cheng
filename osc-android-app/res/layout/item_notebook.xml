<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_note_img_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/item_note_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="标题" />

        <TextView
            android:id="@+id/item_note_tv_howlong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_note_tv_title"
            android:text="14天前" />

        <TextView
            android:id="@+id/item_note_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_note_tv_howlong"
            android:layout_alignTop="@+id/item_note_tv_howlong"
            android:layout_toRightOf="@+id/item_note_tv_howlong"
            android:text="18:30" />

        <TextView
            android:id="@+id/item_note_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_note_tv_howlong"
            android:layout_alignTop="@+id/item_note_tv_howlong"
            android:layout_toRightOf="@+id/item_note_tv_time"
            android:text="12月1日" />
    </RelativeLayout>

</LinearLayout>