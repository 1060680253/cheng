<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:minHeight="184dp">

    <ImageView
        android:id="@+id/iv_event_banner_bg"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_event_banner_img"
        android:contentDescription="@string/app_name"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/iv_event_banner_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_event_banner_title"
            android:maxLines="3"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/space_5"
            style="@style/list_text_title"
            android:textColor="@color/white"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_event_banner_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/tv_event_banner_title"
            android:layout_marginBottom="@dimen/space_5"
            android:ellipsize="end"
            android:maxLines="3"
            android:lineSpacingExtra="@dimen/space_5"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_event_pub_date"
            android:layout_alignParentBottom="true"
            style="@style/list_text_info"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />
    </RelativeLayout>
</RelativeLayout>