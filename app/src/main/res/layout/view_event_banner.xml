<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:minHeight="184dp">

    <ImageView
        android:id="@+id/iv_event_banner_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_event_banner_img"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_event_banner_img">

        <TextView
            android:id="@+id/tv_event_banner_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:gravity="top"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Large Text" />

        <TextView
            android:id="@+id/tv_event_banner_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/tv_event_banner_title"
            android:layout_marginBottom="@dimen/space_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/space_5"
            android:maxLines="3"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>