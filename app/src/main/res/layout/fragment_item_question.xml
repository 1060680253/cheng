<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_ques_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:paddingTop="4dp"
            android:src="@drawable/widget_dface" />

        <TextView
            android:id="@+id/tv_ques_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center|left|top"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:text="title"
            android:textColor="@android:color/background_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="54dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ques_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:text="@string/flickr_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ques_item_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="54dp"
            android:layout_weight="2"
            android:gravity="left|center"
            android:lines="1"
            android:text="NNNNN"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="tag"
            android:src="@drawable/ic_view" />

        <TextView
            android:id="@+id/tv_ques_item_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="23dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:text="20"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="tag"
            android:src="@drawable/ic_comment_30" />

        <TextView
            android:id="@+id/tv_ques_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:gravity="right|center"
            android:text="30"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1dp"
        android:background="@color/count_text_color_light" />

</LinearLayout>
