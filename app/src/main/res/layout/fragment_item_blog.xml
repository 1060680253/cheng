<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_blog_tag_recommend"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|center"
            android:src="@drawable/ic_label_recommend" />

        <ImageView
            android:id="@+id/iv_item_blog_tag"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|center"
            android:layout_marginLeft="4dp"
            android:contentDescription="tag"
            android:src="@drawable/ic_label_originate" />

        <TextView
            android:id="@+id/tv_item_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="top"
            android:maxLines="2"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blog_title_text_color_light"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_blog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        android:text="New Text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_blog_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left|center"
            android:lines="1"
            android:text="NNNNN"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center|right"
            android:src="@drawable/ic_view" />

        <TextView
            android:id="@+id/tv_item_blog_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="23dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:text="20"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_comment_30" />

        <TextView
            android:id="@+id/tv_item_blog_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:text="30"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/count_text_color_light" />

</LinearLayout>