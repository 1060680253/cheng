<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/layout_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:contentDescription="@null"
            android:src="@drawable/widget_today_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/space_5"
            style="@style/list_text_title"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/space_5"
        android:textColor="?attr/infoTextColor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_weight="1"
            style="@style/list_text_info"
            android:layout_marginRight="10dp" />


        <IconTextView
            style="@style/list_text_info"
            android:text="{fa-comments-o} " />

        <TextView
            android:id="@+id/tv_comment_count"
            style="@style/list_text_info" />

    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        style="@style/h_line"/>
</LinearLayout>